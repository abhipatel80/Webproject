<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <script src="https://kit.fontawesome.com/2ba0febf51.js" crossorigin="anonymous"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="style.css">
    <link rel="shortcut icon" href="images/logo.png" type="image/png">
</head>
{{>navbar}}
<!-- MAIN HEADER  -->
<div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityname" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="submit" value="search" id="submitbtn">
                </form>
            </div>
            <div class="tempinfo">
                <div class="top">
                    <p id="day">Tuesday</p>
                    <p id="date">13 OCT</p>
                </div>
                <div class="main">
                    <p id="city">Get Output Here</p>
                    <div class="middle data hide">
                        <p id="temp"><span id="tempreal">0</span> <sup>o</sup>C</p>
                        <p id="tempstatus"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- footer code  -->
{{>footer}}
<script src="main.js"></script>
<script>
    const getcurrentday = () =>{
    var weekday = new Array(7);
    weekday[0] = "Sun"
    weekday[1] = "Mon"
    weekday[2] = "Tue"
    weekday[3] = "Wed"
    weekday[4] = "Thu"
    weekday[5] = "Fri"
    weekday[6] = "Sat"

    let currenttime = new Date();
    days = weekday[currenttime.getDay()];
    let day = document.getElementById('day');
    day.innerText = days;
};
getcurrentday();
</script>
</body>

</html>